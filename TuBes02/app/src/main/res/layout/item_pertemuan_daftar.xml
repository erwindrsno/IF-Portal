<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_judul_pertemuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/item_pertemuan_judul_text_size" />

    <TextView
        android:id="@+id/tv_waktu_pertemuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/item_pertemaun_subjudul_text_size"
        android:layout_below="@+id/tv_judul_pertemuan" />
</RelativeLayout>